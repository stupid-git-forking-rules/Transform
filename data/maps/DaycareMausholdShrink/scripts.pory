script Familyoftwo{
    if(!flag(FLAG_FAM_TWO))
    {
    lock
    faceplayer
    speakername("Tandemaus")
    createfieldmugshot(MUGSHOT_TANDEMAUS, EMOTE_NORMAL)
    msgbox("The neighbors at the bottom of\nthe cliff are always feuding...\pWe decided not to have kids\nand we've been perfectly happy\lup here.\pHere. Take these two items.\n", MSGBOX_DEFAULT)
    removefieldmugshot
    setflag(FLAG_SUPPRESS_SPEAKER_NAME)
    setflag(FLAG_FAM_TWO)
    giveitem(ITEM_LUCKY_EGG, 2)
    clearflag(FLAG_SUPPRESS_SPEAKER_NAME) 
    waitmessage
    release
    end   
    }
    else{
    lock
    faceplayer
    speakername("Tandemaus")
    createfieldmugshot(MUGSHOT_TANDEMAUS, EMOTE_NORMAL)
    msgbox("We've been quite happy up here.\pWe've built a nice life for\nourselves.\pWe even have enough items\nleftover to afford to make\lfrequent trips around the Daycare!", MSGBOX_DEFAULT)
    waitmessage
    removefieldmugshot
    release
    end
    }
}

script ShrinkToPikachuCave5{
    lock
    if (var(VAR_TRANSFORM_MON) == SPECIES_CUTIEFLY)
    {
        msgbox("There is a tiny hole that you can\nsqueeze through.\pWould you like to squeeze through it?",MSGBOX_YESNO)
        if(var(VAR_RESULT) == YES)
        {
            warp(MAP_DAYCAREBASE, 2)
        }   
        else
        {
            waitmessage
            release
            end
        }
    }
    else
    {
        msgbox("There is a tiny hole.\pA small Pok√©mon may be able to\nsqueeze through it.", MSGBOX_DEFAULT)
        waitmessage
        release
        end
    }
}
